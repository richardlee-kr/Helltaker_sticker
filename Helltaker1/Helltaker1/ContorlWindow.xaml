<Window x:Class="Helltaker1.ContorlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Helltaker1"
        mc:Ignorable="d"
        Title="ContorlWindow" Height="250" Width="250"
        Background="Black"
        ResizeMode="NoResize"
        >
    <Grid>
        <TextBlock Text="Volume" Foreground="White"></TextBlock>
        <TextBlock Text="22" Name="VolumeText" Foreground="LightGreen" Margin="45,0,0,0"></TextBlock>
        <TextBlock Text="Speed" Foreground="White" Margin="0,20,0,0"></TextBlock>
        <TextBlock Text="1.0" Name ="SpeedText" Foreground="GreenYellow" Margin="35,20,0,0"></TextBlock>
        <Slider Name ="musicVolume" Orientation="Vertical" HorizontalAlignment="Right" Value="20" Height="150" Minimum="1" Maximum="100" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="Slider_Volume"></Slider>
        <Slider Name ="musicSpeed" Orientation="Horizontal" VerticalAlignment="Bottom" Value="1" Width="200" Minimum="0.25" Maximum="2.0" IsSnapToTickEnabled="True" TickFrequency="0.25" ValueChanged="Slider_Speed"></Slider>
        <Button Width="50" Height="50">Add</Button>
        <!--<Ellipse Height="100" Width="100" Fill="White" Stroke="Black"/>-->
    </Grid>
</Window>
